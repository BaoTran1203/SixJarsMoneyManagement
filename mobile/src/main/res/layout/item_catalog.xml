<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/catalogItemMargin"
    android:theme="@style/CardViewStyle">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/catalogItemPadding"
        tools:ignore="HardcodedText">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/txtRevenueType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/catalogItemMargin"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/catalogTitleTextSize"
            android:textStyle="bold" />

        <include layout="@layout/layout_line_horizontal" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/txtDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/catalogItemMargin"
            android:textSize="@dimen/catalogDesTextSize"
            android:textStyle="italic" />
    </LinearLayout>
</android.support.v7.widget.CardView>